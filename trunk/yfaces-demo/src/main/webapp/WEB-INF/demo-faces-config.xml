<?xml version='1.0' encoding='UTF-8'?>
 
<faces-config
	xmlns="http://java.sun.com/xml/ns/javaee"	version="1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

	<lifecycle>
		<phase-listener> de.hybris.yfaces.demo.PrettySourceListener </phase-listener>
		
		<phase-listener> de.hybris.yfaces.selenium.SeleniumPhaseListener </phase-listener>
	</lifecycle>

	<managed-bean>
		<managed-bean-name>chapterBean</managed-bean-name>
		<managed-bean-class>
			de.hybris.yfaces.demo.ChapterMBean
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

</faces-config>
